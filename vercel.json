{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "analysis_service.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/analyze/(.*)",
      "dest": "analysis_service.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "@NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "TWITTER_BEARER_TOKEN": "@TWITTER_BEARER_TOKEN"
  }
}